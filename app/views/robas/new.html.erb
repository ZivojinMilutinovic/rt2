<div class="d-flex justify-content-center">
<div class="col-lg-7 col-md-9 ">
    <h2 class="text-center">Kreiraj novu Robu</h2>
    <form action="/robas" method="POST">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-row">
    <div class="form-group col mr-1">
    <label for="analitika_racuna_id">AnalitikaRacunaID:</label>
    <input type="number" name="roba[analitika_racuna_id]" id="analitika_racuna_id" class="form-control">
    </div>
    <div class="form-group col  ml-1">
    <label for="naziv">Naziv:</label>
    <input type="text" name="roba[naziv]" id="naziv" class="form-control">
    </div>
    </div>
   
    <div class="form-row">
    <div class="form-group col mr-1">
    <label for="sifra">Å ifra:</label>
    <input type="number" name="roba[sifra]" id="sifra" class="form-control">
    </div>
    <div class="form-group col ml-1">
    <label for="oznaka">Oznaka:</label>
    <input type="text" name="roba[oznaka]" id="oznaka" class="form-control">
    </div>
    </div>
    
    <div class="form-row">
    <div class="form-group col mr-1">
    <label for="kat_broj">Kat Broj:</label>
    <input type="text" name="roba[kat_broj]" id="kat_broj" class="form-control">
    </div>
    <div class="form-group col mr-1">
    <label for="jedinica_mere">Jedinica mere:</label>
    <input type="text" name="roba[jedinica_mere]" id="jedinica_mere" class="form-control">
    </div>
    </div>

    <div class="form-row">
    <div class="form-group col mr-1">
    <label for="poreska_tarifa">Poreska tarifa:</label>
    <input type="number" name="roba[poreska_tarifa]" id="poreska_tarifa" class="form-control">
    </div>
    <div class="form-group col mr-1">
    <label for="pakovanje">Pakovanje:</label>
    <input type="text" name="roba[pakovanje]" id="pakovanje" class="form-control">
    </div>
    </div>

    <div class="d-flex justify-content-between">
    <a href="/robas" class="btn btn-danger"> Natrag</a>
    <button type="submit" class="btn btn-primary">Kreiraj</button>
    </div>
    </form>
</div>
</div>