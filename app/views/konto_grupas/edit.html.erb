<div class="col-lg-6 col-md-8">
    <h2 class="text-center">Konto Grupa</h2>
    <form action="<%=konto_grupa_url(@grupa) %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="id" value="<%=@grupa.id%>">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-group">
    <label for="klasaID">KlasaID:</label>
    <input type="number" name="grupa[konto1_klasa_id]" id="klasaID"
     class="form-control" value="<%=@grupa.konto1_klasa_id %>">
    </div>
    <div class="form-group">
    <label for="naziv">Naziv</label>
    <input type="text" name="grupa[naziv]"  value="<%=@grupa.naziv %>"
    id="naziv" class="form-control">
    </div>
    <div class="form-group">
    <label for="grupa">Grupa</label>
    <input type="number" name="grupa[grupa]" value="<%=@grupa.grupa %>"
     id="grupa" class="form-control">
    </div>
    <div class="d-flex justify-content-between">
    <a href="/konto_grupas" class="btn btn-danger"> Natrag</a>
    <button type="submit" <%="disabled" if !(@grupa.user==current_user) %>
     class="btn btn-primary">Azuriraj</button>
    </div>
    </form>
</div>