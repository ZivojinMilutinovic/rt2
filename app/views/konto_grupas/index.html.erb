<table id="example" class="data-table table table-striped table-bordered w-100 ">
        <thead>
            <tr>
            <%@nazivi_kolona.each do |kolona| %>
            <th> <%=kolona %></th>
            <%end %>
            <th>Opcije</th>
            </tr>
        </thead>
        <tbody>
            <% @konto_grupa.each do |grupa| %>
                <tr>
                <td><%=grupa.id %></td>
                <td><%=grupa.konto1_klasa_id %></td>
                <td><%=grupa.naziv %></td>
                <td><%=grupa.grupa %></td>
                <td>
                <div class="d-flex">
                <a href="<%=edit_konto_grupa_url(grupa) %>"><span class="fa fa-eye mr-2"></span></a>
                <% if grupa.user==current_user%>
                <form action="<%= konto_grupa_url(grupa) %>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="bg-transparent" style="border:none">
                <span class="fa fa-trash"></span>
                </button>
                </form>
                <%end%>
                </div>
                </td>
                </tr>
            <%end %>
        </tbody>
        <tfoot>
            <tr>
            <%@nazivi_kolona.each do |kolona| %>
            <th> <%=kolona %></th>
            <%end %>
            <th>Opcije</th>
            </tr>
        </tfoot>
    </table>
    <a href="<%=new_konto_grupa_url%>" class="btn btn-primary mt-3" >Kreiraj novu grupu</a>