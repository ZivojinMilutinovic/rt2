<div class="d-flex justify-content-center">
<div class="col-lg-7 col-md-9 ">
    <h2 class="text-center">Kreiraj novu poresku tarifu</h2>
    <form action="/poreske_tarifes" method="POST">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-row">
    <div class="form-group col mr-1">
    <label for="tarifa">Tarifa:</label>
    <input type="number" name="tarifa[tarifa]" id="tarifa" class="form-control">
    </div>
    <div class="form-group col  ml-1">
    <label for="naziv">Naziv:</label>
    <input type="text" name="tarifa[naziv]" id="naziv" class="form-control">
    </div>
    </div>
   
    <div class="form-group">
    <label for="stopa">Stopa:</label>
    <input type="number" name="tarifa[stopa]" id="stopa" class="form-control">
    </div>
    
    <div class="form-row">
    <div class="form-group col ml-1">
    <label for="poc_dat">Početni datum:</label>
    <input type="date" name="tarifa[poc_dat]" id="poc_dat" class="form-control">
    </div>
    <div class="form-group col mr-1">
    <label for="zav_dat">Završni datum:</label>
    <input type="date" name="tarifa[zav_dat]" id="zav_dat" class="form-control">
    </div>
    </div>

    <div class="d-flex justify-content-between">
    <a href="/poreske_tarifes" class="btn btn-danger"> Natrag</a>
    <button type="submit" class="btn btn-primary">Kreiraj</button>
    </div>
    </form>
</div>
</div>