<table id="example" class="data-table table table-striped table-bordered w-100 ">
        <thead>
            <tr>
            <%@nazivi_kolona.each do |kolona| %>
            <th> <%=kolona %></th>
            <%end %>
            <th>Opcije</th>
            </tr>
        </thead>
        <tbody>
            <% @konto_sintetika.each do |sintetika| %>
                <tr>
                <td><%=sintetika.id %></td>
                <td><%=sintetika.konto2_grupa_id %></td>
                <td><%=sintetika.naziv %></td>
                <td><%=sintetika.konto %></td>
                <td>
                <%= render "shared/konto_prikaz",edit_url:edit_konto_sintetika_url(sintetika),
                delete_url:konto_sintetika_url(sintetika) ,obj:sintetika%>
                </td>
                </tr>
            <%end %>
        </tbody>
        <tfoot>
            <tr>
            <%@nazivi_kolona.each do |kolona| %>
            <th> <%=kolona %></th>
            <%end %>
            <th>Opcije</th>
            </tr>
        </tfoot>
    </table>

    <a href="<%=new_konto_sintetika_url%>" class="btn btn-primary mt-3" >Kreiraj novu Sintetiku</a>